<td class="actions users-actions">
  {{#if banned}}
    <button
      class="action banned"
      data-tooltip="Unbanned"
      hx-on:click='openDialog("admin-table-dialog")' 
      hx-get="/confirm-user-unban" 
      hx-target="#admin-table-dialog .content-wrapper" 
      hx-indicator="#admin-table-dialog" 
      hx-vals='{"id":"{{id}}"}'
    >
      {{> icons/stop}}
    </button>
  {{/if}}
  <button 
    class="action edit"
    hx-on:click='openDialog("admin-table-dialog")' 
    hx-get="/update-user" 
    hx-target="#admin-table-dialog .content-wrapper" 
    hx-indicator="#admin-table-dialog" 
    hx-vals='{"id":"{{id}}"}'
  >
    {{> icons/pencil}}
  </button>
  {{#unless banned}}
    <button 
      class="action ban" 
      hx-on:click='openDialog("admin-table-dialog")' 
      hx-get="/confirm-user-ban" 
      hx-target="#admin-table-dialog .content-wrapper" 
      hx-indicator="#admin-table-dialog" 
      hx-vals='{"id":"{{id}}"}'
    >
      {{> icons/stop}}
    </button>
  {{/unless}}
  <button 
    class="action delete" 
    hx-on:click='openDialog("admin-table-dialog")' 
    hx-get="/confirm-user-delete" 
    hx-target="#admin-table-dialog .content-wrapper" 
    hx-indicator="#admin-table-dialog" 
    hx-vals='{"id":"{{id}}"}'
  >
    {{> icons/trash}}
  </button>
</td>