{{> header}}
<section id="settings" class="section-container">
  <h1 class="settings-welcome">
    Welcome, <span class="email">{{user.email}}</span>.
  </h1>
  {{> settings/usage_month}}
  <hr />
  {{#ifLeastOne server_ip_address server_cname_address}}
    {{> settings/domain/index}}
    <hr />
  {{/ifLeastOne}}
  {{> settings/apikey}}
  <hr />
  {{> settings/change_password}}
  <hr />
  {{#if mail_enabled}}
    {{> settings/change_email}}
    <hr />
  {{/if}}
  {{> settings/delete_account}}
</section>
{{> footer}}